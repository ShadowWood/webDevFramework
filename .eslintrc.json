{
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "logger": true,
    "$ngScope": true,
    "$ngInjector": true,
    "$ngCompile": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "brace-style": [
      "error",
      "1tbs",
      { "allowSingleLine": true }
    ],
    "space-before-blocks": "error",
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "prefer-const": [
      "error", 
      { "destructuring": "all" }
    ]    
  }
}